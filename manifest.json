{
  "manifest_version": 2,

  "name": "CryptMate",
  "version": "1.0",
  "icons": { "16": "icons/icon16.png",
           "48": "icons/icon48.png",
          "128": "icons/icon128.png" },

  "browser_action": {
    "default_icon": "icons/browseractionicon.png",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "permissions": [
    "tabs",
    "clipboardWrite",
    "storage",
    "https://www.cryptmate.com/"
  ]
}
